// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

//多行文本溢出显示。。。
no-wrap($num)
  display:-webkit-box
  text-overflow: ellipsis
  overflow: hidden
  //white-space: nowrap
  -webkit-box-orient: vertical;
  -webkit-line-clamp:$num||1
// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
